<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.SingUpLoginRecovery.UpdateUserFragment"
>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back_concert"
            android:scaleType="centerCrop"

    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#a8000000"
    >
        <ImageView
                android:layout_width="154dp"
                android:layout_height="141dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/circle_image"
                android:src="@drawable/logo_2"

        />
        <!--android:drawableLeft="@drawable/logo_2"-->
        <EditText
                android:id="@+id/update_email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myCreateAcountEditText"
                android:hint="Email....."
                android:inputType="textEmailAddress"
        />
        <EditText
                android:id="@+id/update_pass_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña....."
                android:inputType="textPassword"
                style="@style/myCreateAcountEditText"

        />
        <EditText
                android:id="@+id/update_repeat_pass_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repetir contraseña....."
                android:inputType="textPassword"
                style="@style/myCreateAcountEditText"
        />
        <EditText
                android:id="@+id/update_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre....."
                android:inputType="textCapWords"
                style="@style/myCreateAcountEditText"
        />
        <EditText
                android:id="@+id/update_last_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos....."
                android:inputType="textCapWords"
                style="@style/myCreateAcountEditText"
        />
        <EditText
                android:id="@+id/update_address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirección...."
                android:inputType="textCapWords"
                style="@style/myCreateAcountEditText"
        />

        <AutoCompleteTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/update_city_text"
                android:hint="Población"
                android:inputType="text"
                android:textColor="@android:color/holo_orange_dark"
                android:textColorHint="#ccc"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:popupTheme="@style/my_Popup_style"
                android:textColorHighlight="@color/white"
        />

        <EditText
                android:id="@+id/update_province_text"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Provincia...."
                android:inputType="textCapWords"
                style="@style/myCreateAcountEditText"
        />
        <EditText
                android:id="@+id/update_zip_code_text"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Código postal...."
                android:inputType="number"
                style="@style/myCreateAcountEditText"
        />
        <EditText
                android:id="@+id/update_country_text"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="País...."
                android:inputType="textCapWords"
                style="@style/myCreateAcountEditText"
        />
        <EditText
                android:id="@+id/update_alias_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alias...."
                android:inputType="text"
                style="@style/myCreateAcountEditText"
        />

        <Button
                android:id="@+id/update_profile_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:textSize="20dp"
                style="@style/myButton"
        />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>