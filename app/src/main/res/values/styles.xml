<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="EventsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--item name="isLightTheme">true</item-->
        <!--item name="android:windowIsTranslucent">true</item-->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TransparentCompat" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>

    </style>

    <!--TextView in detail-->
    <style name="TextView.DetailEvent" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@string/common_google_play_services_enable_title</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="my_Popup_style" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="my_Btn_Detail" parent="AppTheme">
        <item name="android:textColor">@color/white</item>

        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:layout_marginRight">5dp</item>
        <!--android:drawableLeft="@mipmap/ic_launcher_round"    to set an icon
               android:drawablePadding="10dp" to set the padding of icon from text
               android:paddingLeft="20dp"  to set the padding of the icon and text-->
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <!-- Para el mapa-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Widget.AppCompat.CompoundButton.Switch." parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="AppTheme.PopupOverlay.EventType" parent="AppTheme.PopupOverlay">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay.City" parent="AppTheme.PopupOverlay">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="myButton">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name=" android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name=" android:elevation">5dp</item>
        <item name="android:background">@drawable/login_button</item>
        <item name=" android:textAllCaps">false</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:icon">@drawable/logo_2</item>
        <item name="android:textSize">40dp</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:typeface">normal</item>


        <!--item name="android:background">@drawable/back_concert</item-->
    </style>

    <style name="AlertDialogDeleteUser" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/side_nav_bar_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:icon">@drawable/logo_2</item>
        <item name="android:textSize">20dp</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:typeface">normal</item>


        <!--item name="android:background">@drawable/back_concert</item-->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="myCreateAcountEditText">
        <item name="android:textColor">@color/orange_700</item>
        <item name="android:textColorHint">#ccc</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
